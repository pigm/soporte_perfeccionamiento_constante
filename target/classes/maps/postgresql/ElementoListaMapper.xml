<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.ElementoListaMapper">
	<resultMap id="BaseResultMap"
		type="cl.mineduc.came.apoyo_mejora_continua.modelo.ElementoLista">
		<id column="id_elemento_lista" property="idElementoLista" />
		<result column="id_lista" property="idLista" />
		<result column="nombre" property="nombre" />
		<result column="status" property="status" />
	</resultMap>
	
	<sql id="query">
		select _el.id_elemento_lista, 
			   _el.id_lista,
			   _el.nombre,
			   _el.status
		from came.came_elemento_lista _el
	</sql>	
	
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
		delete from came.came_elemento_lista
		where id_elemento_lista = #{idElementoLista,jdbcType=BIGINT}
	</delete>
	
	<insert id="insert"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.ElementoLista">
		<selectKey keyColumn="id_elemento_lista" keyProperty="idElementoLista"
			order="BEFORE" resultType="java.lang.Long">
			(select came.next_id())
		</selectKey>
		insert into came.came_elemento_lista (id_elemento_lista, id_lista, nombre, status)
		values (#{idElementoLista,jdbcType=BIGINT}, #{idLista,jdbcType=BIGINT}, #{nombre}, #{status})
	</insert>
	
	<update id="updateById"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.ElementoLista">
		update came.came_elemento_lista
		set id_lista = #{idLista,jdbcType=BIGINT},
		nombre = #{nombre},
		status = #{status}
		where id_elemento_lista = #{idElementoLista,jdbcType=BIGINT}
	</update>
	
	<select id="getById" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="query"></include>
		where _el.id_elemento_lista = #{idElementoLista,jdbcType=BIGINT}
	</select>
	
	<select id="getByIdLista" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="query"></include>
		where _el.id_lista = #{idLista,jdbcType=BIGINT}
	</select>
	
	<select id="getAll" resultMap="BaseResultMap">
		<include refid="query"></include>
		order by _el.id_elemento_lista asc
	</select>
</mapper>