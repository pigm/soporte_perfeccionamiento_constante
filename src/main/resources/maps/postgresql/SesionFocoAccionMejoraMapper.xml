<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.SesionFocoAccionMejoraMapper">
	<resultMap id="BaseResultMap" type="cl.mineduc.came.apoyo_mejora_continua.modelo.SesionFocoAccionMejora">
		<id column="id_sesion_foco_accion_mejora" property="idSesionFocoAccionMejora" />
		<result column="id_sesion_foco" property="idSesionFoco" />		
		<result column="accion_mejora" property="accionMejora" />
		<result column="completado" property="completado" />
		<result column="id_usuario_registro" property="idUsuarioRegistro" />
		<result column="fecha_registro" property="fechaRegistro" />
	</resultMap>

	<sql id="query">
		select _sf.id_sesion_foco_accion_mejora, 
				_sf.id_sesion_foco, 
				_sf.accion_mejora, 
				_sf.completado, 
				_sf.id_usuario_registro, 
				_sf.fecha_registro
		from came.came_sesion_foco_accion_mejora _sf
	</sql>

	<delete id="deleteById" parameterType="java.lang.Long">
		delete from came.came_sesion_foco_accion_mejora_accion_mejora
		where id_sesion_foco_accion_mejora = #{idSesionFocoAccionMejora}
	</delete>

	<insert id="insert" parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.SesionFoco">
		<selectKey keyColumn="id_sesion_foco_accion_mejora"
			keyProperty="idSesionFocoAccionMejora" order="BEFORE"
			resultType="java.lang.Long">
			(select came.next_id())
		</selectKey>
		insert into came.came_sesion_foco_accion_mejora (
			id_sesion_foco_accion_mejora, 
			id_sesion_foco, 
			accion_mejora, 
			completado, 
			id_usuario_registro, 
			fecha_registro
		)
		values (
			#{idSesionFocoAccionMejora}, 
			#{idSesionFoco}, 
			#{accionMejora}, 
			#{completado}, 
			#{idUsuarioRegistro}, 
			#{fechaRegistro}
		)
	</insert>

	<update id="updateById"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.SesionFoco">
		update came.came_sesion_foco_accion_mejora
		set	id_sesion_foco=#{idSesionfoco}, 
			accion_mejora=#{accionMejora}, 
			completado=#{completado}, 
			id_usuario_registro=#{iUsuarioRegistro}, 
			fecha_registro=#{fechaRegistro}	
		where id_sesion_foco_accion_mejora = #{idSesionFocoAccionMejora}
	</update>

	<select id="getById" parameterType="java.lang.Long"	resultMap="BaseResultMap">
		<include refid="query"></include>		
		where _sf.id_sesion_foco_accion_mejora = #{idSesionFocoAccionMejora}
	</select>
	
	<select id="getAll" resultMap="BaseResultMap">
		<include refid="query"></include>	
		order by _sf.id_sesion_foco_accion_mejora asc
	</select>

	<select id="getByIdSesionFoco" parameterType="java.lang.Long" resultMap="BaseResultMap">
		<include refid="query"></include>		
		where _sf.id_sesion_foco = #{idSesionFoco}
	</select>
</mapper>