<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.SesionMovimientosClavesMapper">
	<resultMap id="BaseResultMap" type="cl.mineduc.came.apoyo_mejora_continua.modelo.SesionMovimientosClaves">
		<id column="id_sesion_movimientos_claves" property="idSesionMovimientosClaves" />
		<result column="id_sesion_foco" property="idSesionFoco" />
		<result column="id_foco" property="idFoco" />
		<result column="id_movimientos_claves" property="idMovimientosClaves" />
		<result column="completado" property="completado" />
		<result column="usuario_registro" property="usuarioRegistro" />
		<result column="fecha_registro" property="fechaRegistro" />	
	</resultMap>

	<sql id="query">
		select  _smc.id_sesion_movimientos_claves, 
				_smc.id_sesion_foco, 
				_smc.id_foco, 
				_smc.id_movimientos_claves, 
				_smc.completado, 
				_smc.usuario_registro, 
				_smc.fecha_registro
		from came.came_sesion_movimientos_claves _smc
	</sql>

	<delete id="deleteById" parameterType="java.lang.Long">
		delete from came.came_sesion_movimientos_claves
		where id_sesion_movimientos_claves = #{idSesionMovimientosClaves}
	</delete>

	<insert id="insert"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.SesionMovimientosClaves">
		<selectKey keyColumn="id_sesion_movimientos_claves"
			keyProperty="idSesionMovimientosClaves" order="BEFORE"
			resultType="java.lang.Long">
			(select came.next_id())
		</selectKey>
		insert into came.came_sesion_movimientos_claves (
			id_sesion_movimientos_claves, 
			id_sesion_foco, 
			id_foco, 
			id_movimientos_claves, 
			completado, 
			usuario_registro, 
			fecha_registro
		)		
		values (
			#{idSesionMovimientosClaves}, 
			#{idSesionFoco}, 
			#{idFoco}, 
			#{idMovimientosClaves}, 
			#{completado}, 
			#{usuarioRegistro}, 
			#{fechaRegistro}
		)
	</insert>

	<update id="updateById"	parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.SesionMovimientosClaves">
		update came.came_sesion_movimientos_claves
		set id_sesion_movimientos_claves=#{idSesionMovimientosClaves}, 
			id_sesion_foco=#{idSesionFoco}, 
			id_foco=#{idFoco}, 
			id_movimientos_claves=#{idMovimientosClaves}, 
			completado=#{completado}, 
			usuario_registro=#{usuarioRegistro}, 
			fecha_registro=#{fechaRegistro}
		where id_sesion_movimientos_claves = #{idSesionMovimientosClaves}
	</update>

	<select id="getById" parameterType="java.lang.Long"	resultMap="BaseResultMap">
		<include refid="query"></include>
		where _smc.id_sesion_movimientos_claves = #{idSesionMovimientosClaves}
	</select>

	<select id="getAll" resultMap="BaseResultMap">
		<include refid="query"></include>
		order by _smc.id_sesion_movimientos_claves asc
	</select>

	<select id="getByIdSesionFoco" parameterType="java.lang.Long"	resultMap="BaseResultMap">
		<include refid="query"></include>
		where _smc.id_sesion_foco = #{idSesionFoco}
	</select>
</mapper>