<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.MovimientosClavesMapper">
	<resultMap id="BaseResultMap"
		type="cl.mineduc.came.apoyo_mejora_continua.modelo.MovimientosClaves">
		<id column="id_movimientos_claves" property="idMovimientosClaves" />
		<result column="id_acciones_mejoras"
			property="idAccionesMejoras" />
		<result column="nombre" property="nombre" />
		<result column="descripcion" property="descripcion" />
		<result column="fecha_registro" property="fechaRegistro" />
		<result column="ultima_modificacion"
			property="ultimaModificacion" />
		<result column="id_usuario_modificacion"
			property="idUsuarioModificacion" />	
	</resultMap>

	<sql id="query">
		select 
		_mc.id_movimientos_claves,
		_mc.id_acciones_mejoras,
		_mc.nombre,
		_mc.descripcion,
		_mc.fecha_registro,
		_mc.ultima_modificacion,
		_mc.id_usuario_modificacion
		from came.came_movimientos_claves _mc
	</sql>

	<delete id="deleteById" parameterType="java.lang.Long">
		delete from
		came.came_movimientos_claves
		where id_movimientos_claves =
		#{idMovimientosClaves,jdbcType=BIGINT}
	</delete>
	
	<insert id="insert"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.MovimientosClaves">
		<selectKey keyColumn="id_movimientos_claves"
			keyProperty="idMovimientosClaves" order="BEFORE"
			resultType="java.lang.Long">
			(select came.next_id())
		</selectKey>
		insert into came.came_movimientos_claves
		(id_movimientos_claves,
		id_acciones_mejoras,
		nombre,
		descripcion,
		fecha_registro,
		ultima_modificacion,
		id_usuario_modificacion		
		)
		values
		(#{idMovimientosClaves,jdbcType=BIGINT},
		#{idAccionesMejoras,jdbcType=BIGINT},
		#{nombre},
		#{descripcion},
		now(),
		now(),
		#{idUsuarioModificacion}
		)
	</insert>
	<update id="updateById"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.MovimientosClaves">
		update came.came_movimientos_claves
		set id_acciones_mejoras =
		#{idAccionesMejoras,jdbcType=BIGINT},
		nombre = #{nombre},
		descripcion = #{descripcion},
		ultima_modificacion = now(),
		id_usuario_modificacion =
		#{idUsuarioModificacion}
		where
		id_movimientos_claves =
		#{idMovimientosClaves,jdbcType=BIGINT}
	</update>
	<select id="getById" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="query"></include>
		where _mc.id_movimientos_claves =
		#{idMovimientosClaves,jdbcType=BIGINT}
	</select>

	<select id="getByName" resultMap="BaseResultMap">
		<include refid="query"></include>
		where _mc.nombre =	#{nombre}
	</select>

	<select id="getAll" resultMap="BaseResultMap">
		<include refid="query"></include>
		order by _mc.id_movimientos_claves asc
	</select>
	
	<select id="getByIdAcciones" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="query"></include>
		where _mc.id_acciones_mejoras =
		#{idAccionesMejoras,jdbcType=BIGINT}
	</select>
</mapper>