  <sql id="query">
		SELECT 
			_up.id_usuario_perfil,
      _up.id_usuario,
      _up.id_perfil,
      _up.start_date,
      _up.end_date,
      _up.status
		FROM
			came.came_usuario_perfil _up
	</sql>

  <delete id="deleteById" parameterType="java.lang.Long">
    delete from came.came_usuario_perfil
    where id_usuario_perfil = #{idUsuarioPerfil,jdbcType=BIGINT}
  </delete>
  
