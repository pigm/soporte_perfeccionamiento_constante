    <id column="id_usuario_perfil" jdbcType="BIGINT" property="idUsuarioPerfil" />
    <result column="id_usuario" jdbcType="BIGINT" property="idUsuario" />
    <result column="id_perfil" jdbcType="BIGINT" property="idPerfil" />
