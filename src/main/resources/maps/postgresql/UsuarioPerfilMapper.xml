  <selectKey keyColumn="id_usuario_perfil" keyProperty="idUsuarioPerfil"
			order="BEFORE" resultType="java.lang.Long">
			(select came.next_id())
		</selectKey>
    insert into came.came_usuario_perfil (id_usuario_perfil, id_usuario, id_perfil, 
      start_date, end_date, status
      )
    values (#{idUsuarioPerfil,jdbcType=BIGINT}, #{idUsuario,jdbcType=BIGINT}, #{idPerfil,jdbcType=BIGINT}, 
      #{startDate,jdbcType=TIMESTAMP}, #{endDate,jdbcType=TIMESTAMP}, 't'
      )
  </insert>
    
  <update id="updateById" parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.UsuarioPerfil">
    update came.came_usuario_perfil
    set id_usuario = #{idUsuario,jdbcType=BIGINT},
      id_perfil = #{idPerfil,jdbcType=BIGINT},
      start_date = #{startDate,jdbcType=TIMESTAMP},
      end_date = #{endDate,jdbcType=TIMESTAMP},
      status = 't'
    where id_usuario_perfil = #{idUsuarioPerfil,jdbcType=BIGINT}
  </update>

  <select id="getByIdUsuario" parameterType="java.lang.Long" resultMap="BaseResultMap">
  <include refid="query"/>
    where _up.id_usuario = #{id_usuario,jdbcType=BIGINT}
  </select>
  
  <select id="getById" parameterType="java.lang.Long" resultMap="BaseResultMap">
  <include refid="query"/>
    where _up.id_usuario_perfil = #{idUsuarioPerfil,jdbcType=BIGINT}
  </select>

  <select id="getAll" resultMap="BaseResultMap">
    <include refid="query"/>
		order by _up.id_usuario_perfil asc
  </select>
