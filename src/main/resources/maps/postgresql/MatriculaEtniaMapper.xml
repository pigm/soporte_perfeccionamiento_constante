<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.MatriculaEtniaMapper">
	<resultMap id="BaseResultMap"
		type="cl.mineduc.came.apoyo_mejora_continua.modelo.MatriculaEtnia">
		<id column="id_matricula_etnia" property="idMatriculaEtnia" />
	</resultMap>
	
	<sql id="query">
		select _m.id_matricula_etnia
		from came.came_matricula_etnia _m
	</sql>	
	
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
		delete from came.came_matricula_etnia
		where id_matricula_etnia = #{idMatriculaEtnia,jdbcType=BIGINT}
	</delete>
	
	<insert id="insert"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.MatriculaEtnia">
		insert into came.came_matricula_etnia (id_matricula_etnia)
		values (#{matricula.id_matricula_etnia,jdbcType=BIGINT})
	</insert>
	
	<select id="selectAll" resultMap="BaseResultMap">
		<include refid="query"></include>
		order by _m.id_matricula_etnia asc
	</select>
</mapper>