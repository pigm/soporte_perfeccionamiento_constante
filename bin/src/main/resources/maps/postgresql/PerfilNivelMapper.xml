<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.PerfilNivelMapper">
	<resultMap id="BaseResultMap"
		type="cl.mineduc.came.apoyo_mejora_continua.modelo.PerfilNivel">
		<id column="id_perfil_nivel" property="idPerfilNivel" />
		<result column="nombre" property="nombre" />
	</resultMap>
	
	<sql id="query">
		select _pn.id_perfil_nivel, 
			   _pn.nombre
		from came.came_perfil_nivel _pn
   </sql>
	
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from came.came_perfil_nivel
		where id_perfil_nivel = #{idPerfilNivel,jdbcType=BIGINT}
	</delete>
	<insert id="insert"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.PerfilNivel">
		insert into came.came_perfil_nivel (id_perfil_nivel, nombre)
		values (#{perfilNivel.idPerfilNivel,jdbcType=BIGINT}, 
				#{perfilNivel.nombre,jdbcType=VARCHAR})
	</insert>
	
	<update id="updateById"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.PerfilNivel">
		update came.came_perfil_nivel
		set nombre = #{perfilNivel.nombre,jdbcType=VARCHAR}
		where id_perfil_nivel = #{perfilNivel.idPerfilNivel,jdbcType=BIGINT}
	</update>
	
	<select id="getById" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="query"></include>
		where _pn.id_perfil_nivel = #{idPerfilNivel,jdbcType=BIGINT}
	</select>
	
	<select id="getAll" resultMap="BaseResultMap">
		<include refid="query"></include>
		order by _pn.id_perfil_nivel asc
	</select>
</mapper>