<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.RedMapper">
	<resultMap id="BaseResultMap"
		type="cl.mineduc.came.apoyo_mejora_continua.modelo.Red">
		<id column="id_red" jdbcType="BIGINT" property="idRed" />
		<result column="id_red_tipo" jdbcType="BIGINT"	property="idRedTipo" />
		<result column="id_periodo" jdbcType="BIGINT"
			property="idPeriodo" />
		<result column="id_deprov" jdbcType="BIGINT"
			property="idDeprov" />
		<result column="id_usuario" jdbcType="BIGINT"
			property="idUsuario" />
	</resultMap>
	
	<sql id="red">
		SELECT 
			_r.id_red,
			_r.id_red_tipo,
			_r.id_periodo,
			_r.id_usuario,
			_r.id_deprov
		FROM
			came.came_red _r
	</sql>
	
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from came.came_red
		where id_red = #{idRed,jdbcType=BIGINT}
	</delete>
	<insert id="insert"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.Red">
		<selectKey keyColumn="id_red" keyProperty="idRed"
			order="BEFORE" resultType="java.lang.Long">
			(select came.next_id())
		</selectKey>
		insert into came.came_red (id_red, id_red_tipo, id_periodo,
		id_deprov, id_usuario)
		values (#{idRed,jdbcType=BIGINT}, #{idRedTipo,jdbcType=BIGINT},
		#{idPeriodo,jdbcType=BIGINT},
		#{idDeprov,jdbcType=BIGINT},
		#{idUsuario,jdbcType=BIGINT})
	</insert>
	<update id="updateById"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.Red">
		update came.came_red
		set id_red_tipo = #{idRedTipo,jdbcType=BIGINT},
		id_periodo = #{idPeriodo,jdbcType=BIGINT},
		id_deprov = #{idDeprov,jdbcType=BIGINT},
		id_usuario = #{idUsuario,jdbcType=BIGINT}
		where id_red = #{idRed,jdbcType=BIGINT}
	</update>
	<select id="getById" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="red"></include>
		where _r.id_red = #{idRed,jdbcType=BIGINT}
	</select>
	
	<select id="getAll" resultMap="BaseResultMap">
		<include refid="red"></include>
		order by _r.id_red desc
	</select>
	
	<select id="getByIdPeriodo" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="red"></include>
		where _r.id_periodo = #{idPeriodo,jdbcType=BIGINT}
	</select>
	
</mapper>