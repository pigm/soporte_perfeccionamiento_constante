<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.PeriodoDocumentosRegionalesMapper">
	<resultMap id="BaseResultMap"
		type="cl.mineduc.came.apoyo_mejora_continua.modelo.PeriodoDocumentosRegionales">
		<id column="id_periodo_documentos_regionales" jdbcType="BIGINT"	property="idPeriodoDocumentosRegionales" />
		<result column="id_region" jdbcType="BIGINT" property="idRegion" />
		<result column="id_deprov" jdbcType="BIGINT" property="idDeprov" />
		<result column="id_periodo" jdbcType="BIGINT" property="idPeriodo" />
		<result column="visible" property="visible" />
		<result column="es_caso_especial" property="esCasoEspecial" />
		<result column="template_path" property="templatePath" />
		<result column="fecha_registro" property="fechaRegistro" />
		<result column="fecha_inicio" property="fechaInicio" />
		<result column="fecha_fin" property="fechaFin" />
		<result column="id_usuario_registro" property="idUsuarioRegistro" />
		<result column="descripcion" property="descripcion" />
	</resultMap>
	
	<sql id="documento_regional">
		SELECT 
			_dr.id_periodo_documentos_regionales, 
			_dr.id_region,
			_dr.id_periodo,
			_dr.visible,
			_dr.es_caso_especial,
			_dr.template_path,
			_dr.fecha_registro,
			_dr.fecha_inicio,
			_dr.fecha_fin,
			_dr.id_usuario_registro,
			_dr.descripcion
		FROM
			came.came_periodo_documentos_regionales _dr
	</sql>
	
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from came.came_periodo_documentos_regionales
		where id_periodo_documentos_regionales =
		#{idPeriodoDocumentosRegionales,jdbcType=BIGINT}
	</delete>
	<insert id="insert"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.PeriodoDocumentosRegionales">
		<selectKey keyColumn="id_periodo_documentos_regionales" keyProperty="idPeriodoDocumentosRegionales"
			order="BEFORE" resultType="java.lang.Long">
			(select came.next_id())
		</selectKey>
		insert into came.came_periodo_documentos_regionales
		(id_periodo_documentos_regionales, id_region,
		id_periodo,
		visible,
		es_caso_especial,
		template_path,
		fecha_registro,
		fecha_inicio,
		fecha_fin,
		id_usuario_registro,
		descripcion)
		values (#{idPeriodoDocumentosRegionales,jdbcType=BIGINT},
		#{idRegion,jdbcType=BIGINT},
		#{idPeriodo,jdbcType=BIGINT},
		#{visible},
		#{esCasoEspecial},
		#{templatePath},
		now(),
		#{fechaInicio},
		#{fechaFin},
		#{idUsuarioRegistro},
		#{descripcion})
	</insert>
	<update id="updateById"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.PeriodoDocumentosRegionales">
		update came.came_periodo_documentos_regionales
		set id_region = #{idRegion,jdbcType=BIGINT},
		id_periodo = #{idPeriodo,jdbcType=BIGINT},
		visible = #{visible},
		es_caso_especial = #{esCasoEspecial},
		template_path = #{templatePath},
		fecha_inicio = #{fechaInicio},
		fecha_fin = #{fechaFin},
		id_usuario_registro = #{idUsuarioRegistro},
		descripcion = #{descripcion}
		where id_periodo_documentos_regionales =
		#{idPeriodoDocumentosRegionales,jdbcType=BIGINT}
	</update>
	<select id="getById" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="documento_regional"></include>
		where _dr.id_periodo_documentos_regionales =
		#{idPeriodoDocumentosRegionales,jdbcType=BIGINT}
	</select>
	<select id="getAll" resultMap="BaseResultMap">
		<include refid="documento_regional"></include>
		order by _dr.id_periodo_documentos_regionales desc
	</select>
	
	<select id="getByIdPeriodo" resultMap="BaseResultMap">
		<include refid="documento_regional"></include>
		where _dr.id_periodo = #{idPeriodo}
		order by _dr.id_periodo_documentos_regionales desc
	</select>
</mapper>