<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.PeriodoAsignacionSupervisorMapper">
	<resultMap id="BaseResultMap" type="cl.mineduc.came.apoyo_mejora_continua.modelo.PeriodoAsignacionSupervisores">
		<id column="id_periodo_asignacion_supervisores"	jdbcType="BIGINT" property="idPeriodoAsignacionSupervisores" />
		<result column="id_periodo" jdbcType="BIGINT" property="idPeriodo" />	
		<result column="id_region" jdbcType="BIGINT" property="idRegion" />
		<result column="id_deprov" jdbcType="BIGINT" property="idDeprov" />	
		<result column="fecha_inicio" property="fechaInicio" />
		<result column="fecha_fin" property="fechaFin" />
		<result column="id_usuario_registro" property="idUsuarioRegistro" />
		<result column="fecha_registro" property="fechaRegistro" />
		<result column="es_caso_especial" property="esCasoEspecial" />
		<result column="descripcion" property="descripcion" />
	</resultMap>
	
	<sql id="asignacion_supervisor">
		SELECT 
			_as.id_periodo_asignacion_supervisores,
			_as.id_periodo,			
			_as.fecha_inicio,
			_as.fecha_fin,
			_as.id_usuario_registro,
			_as.fecha_registro,
			_as.es_caso_especial,
			_as.descripcion
		FROM
			came.came_periodo_asignacion_supervisores _as
	</sql>
	
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from came.came_periodo_asignacion_supervisores
		where id_periodo_asignacion_supervisores =
		#{idPeriodoAsignacionSupervisores,jdbcType=BIGINT}
	</delete>
	<insert id="insert"	parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.PeriodoAsignacionSupervisores">
		<selectKey keyColumn="id_periodo_asignacion_supervisores" keyProperty="idPeriodoAsignacionSupervisores"
			order="BEFORE" resultType="java.lang.Long">
			(select came.next_id())
		</selectKey>
		insert into came.came_periodo_asignacion_supervisores
		(id_periodo_asignacion_supervisores, 
		id_periodo,		
		fecha_inicio,
		fecha_fin,
		id_usuario_registro,
		fecha_registro,
		es_caso_especial,
		descripcion
		)
		values (#{idPeriodoAsignacionSupervisores,jdbcType=BIGINT},
				#{idPeriodo,jdbcType=BIGINT},				
				#{fechaInicio},
				#{fechaFin},
				#{idUsuarioRegistro},
				now(),
				#{esCasoEspecial},
				#{descripcion}
				)
	</insert>
	<update id="updateById"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.PeriodoAsignacionSupervisores">
		update came.came_periodo_asignacion_supervisores
		set id_periodo = #{idPeriodo,jdbcType=BIGINT},
			fecha_inicio = #{fechaInicio},
			fecha_fin = #{fechaFin},
			id_usuario_registro = #{idUsuarioRegistro},
			fecha_registro = now(),
			es_caso_especial = #{esCasoEspecial},
			descripcion = #{descripcion}
		where id_periodo_asignacion_supervisores =#{idPeriodoAsignacionSupervisores,jdbcType=BIGINT}
	</update>
	<select id="getById" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="asignacion_supervisor"></include>
		where _as.id_periodo_asignacion_supervisores = #{idPeriodoAsignacionSupervisores,jdbcType=BIGINT}
	</select>
	<select id="getAll" resultMap="BaseResultMap">
		<include refid="asignacion_supervisor"></include>
		order by _as.id_periodo_asignacion_supervisores desc
	</select>
	
	<select id="getByIdPeriodo" resultMap="BaseResultMap">
		<include refid="asignacion_supervisor"></include>
		where _as.id_periodo = #{idPeriodo}
		order by _as.id_periodo_asignacion_supervisores desc
	</select>
</mapper>