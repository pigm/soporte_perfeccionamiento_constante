<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="cl.mineduc.came.apoyo_mejora_continua.mappers.RedEstablecimientoMapper">
	<resultMap id="BaseResultMap"
		type="cl.mineduc.came.apoyo_mejora_continua.modelo.RedEstablecimiento">
		<id column="id_red_establecimiento" jdbcType="BIGINT"
			property="idRedEstablecimiento" />
		<result column="id_red" jdbcType="BIGINT" property="idRed" />
		<result column="id_establecimiento" jdbcType="BIGINT"
			property="idEstablecimiento" />
		<result column="id_periodo" jdbcType="BIGINT"
			property="idPeriodo" />
	</resultMap>
	
	<sql id="red_establecimiento">
		SELECT 
			_rp.id_red_establecimiento, 
			_rp.id_red,
			_rp.id_establecimiento,
			_rp.id_periodo
		FROM
			came.came_red_establecimiento _rp
	</sql>
	
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from came.came_red_establecimiento
		where id_red_establecimiento = #{idRedEstablecimiento,jdbcType=BIGINT}
	</delete>
	<insert id="insert"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.RedEstablecimiento">
		<selectKey keyColumn="id_red_establecimiento" keyProperty="idRedEstablecimiento"
			order="BEFORE" resultType="java.lang.Long">
			(select came.next_id())
		</selectKey>
		insert into came.came_red_establecimiento (id_red_establecimiento, id_red,
		id_establecimiento,
		id_periodo)
		values (#{idRedEstablecimiento,jdbcType=BIGINT},
		#{idRed,jdbcType=BIGINT}, #{idEstablecimiento,jdbcType=BIGINT},
		#{idPeriodo,jdbcType=BIGINT})
	</insert>
	<update id="updateById"
		parameterType="cl.mineduc.came.apoyo_mejora_continua.modelo.RedEstablecimiento">
		update came.came_red_establecimiento
		set id_red = #{idRed,jdbcType=BIGINT},
		id_establecimiento = #{idEstablecimiento,jdbcType=BIGINT},
		id_periodo = #{idPeriodo,jdbcType=BIGINT}
		where id_red_establecimiento = #{idRedEstablecimiento,jdbcType=BIGINT}
	</update>
	<select id="getById" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		<include refid="red_establecimiento"></include>
		where _rp.id_red_establecimiento = #{idRedEstablecimiento,jdbcType=BIGINT}
	</select>
	<select id="getAll" resultMap="BaseResultMap">
		<include refid="red_establecimiento"></include>
		order by _rp.id_red_establecimiento desc
	</select>
	
	<select id="getByIdPeriodo" resultMap="BaseResultMap">
		<include refid="red_establecimiento"></include>
		where _rp.id_periodo = #{idPeriodo,jdbcType=BIGINT}
		order by _rp.id_red_establecimiento desc
	</select>
	
	<select id="getByIdRed" resultMap="BaseResultMap">
		<include refid="red_establecimiento"></include>
		where _rp.id_red = #{idRed,jdbcType=BIGINT}
		order by _rp.id_red_establecimiento desc
	</select>
</mapper>